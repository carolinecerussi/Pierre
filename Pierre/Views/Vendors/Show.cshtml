@{
  Layout = "_Layout";
}

@using Pierre.Models;

  <h1>Here are all of the Orders with this Vendor</h1>
  <ol>
  @if (Model.Count == 0)
{
  <h3>No orders yet!</h3>
}
  </ol>

  <ol>
  @foreach (Order order in @Model["orders"])
  {
    <li><a href='/vendors/@Model["vendor"].Id/orders/@order.Oid'>Order Name: @order.OrderName
    </a></li>
  }
</ol>

<p><a href='/vendors/@Model["vendor"].Id/orders/new'>Add a new Order</a></p>

<p><a href='/vendors'>Return to Vendors</a></p>

