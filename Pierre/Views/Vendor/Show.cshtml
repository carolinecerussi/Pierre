@{
  Layout = "_Layout";
}

@using Pierre.Models;

<h1>Here are all of the Orders with this Vendor</h1>


<ol>
  @foreach (Order order in @Model["orders"])
  {
    <li><a href='/vendors/@Model["vendor"].Id/orders/@order.Oid'>Order Name: @order.OrderName <break></break>
    Order Description : order.OrderDescription
    <break></break>
    Order Price: $ @order.OrderPrice <break></break>
    Order Date: @order.OrderDate</a>
    </li>
  }
</ol>


<p><a href='/vendors/@Model["vendor"].Id/orders/new'>Add a new Order</a></p>

<p><a href='/vendors'>Return to Vendors</a></p>

