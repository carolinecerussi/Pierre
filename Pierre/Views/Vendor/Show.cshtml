@{
  Layout = "_Layout";
}

@using Pierre.Models;

<h1>@Model.VendorName</h1>

@if (Model.Count == 0)
{
  <p>No past orders</p>
}
<ol>
  @foreach(Order order in @Model["order"])
  {
    <li><a href="/vendor/{id}/order">@order.OrderName</a></li>
  }
</ol>
<a href='/vendor/{id}/order/new'>New Order</a>

<a href='/vendor/{id}/order/'>Order History</a>
<a href="/vendor">Vendor Directory</a>