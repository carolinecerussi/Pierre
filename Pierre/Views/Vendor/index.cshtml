@{
  Layout = "_Layout";
}

@using Pierre.Models;

<h1>VENDORS!</h1>

@if (Model.Count == 0)
{
  <h3>No Vendors yet!</h3>
}
@foreach(Vendor vendor in Model)
{
<h3><a href="/vendor/@vendor.Id">@vendor.VendorName</a></h3>
}
<a href='/vendor/new'>New Vendor</a>

<form action="/items/delete" method="post">
  <button type="submit" name="button">Clear All Items</button>
</form>

<a href="/">Back to Homepage</a> 

