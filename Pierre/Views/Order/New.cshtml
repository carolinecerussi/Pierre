@{
  Layout = "_Layout";
}

<h1>Add a new order with @Model.VendorName </h1>
<form action="/vendor/@Model.Id/order" method="post">
<input id="vendorId" name="vendorId" type="hidden" value="Model.Id">
  <label for= "orderName"> Order Name</label>
    <input id="orderName" name="orderName" type= "text" placeholder="name of order">
  <label for="orderDescription">description</label>
  <input id="orderDescription"name="orderDescription" type="text" placeholder="description of order"></input>
  <label for="orderPrice">Price:</label>
  <input id="orderDate"name="orderPrice" type="text" placeholder="$"></input>
  <label for="orderDate">Date(mm/dd/yyyy)</label>
  <input id="orderDate"name="orderDate" type="text" placeholder="mm/dd/yyy"></input>
  <button type="submit">Add Order</button>
</form>