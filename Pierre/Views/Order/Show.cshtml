@{
  Layout = "_Layout";
}

@using Pierre.Models;
<h1>@Model.VendorName</h1>

@if (Model.Count == 0)
{
  <p>No past orders</p>
}

<h1>Vendor Order Details</h1>

<h3>Vendor: @Model["vendor"].VendorName</h3>

<h2>Order Name: @Model["order"].OrderName</h2>
<h3>Order Description : @Model["order"].OrderDescription</h3>
<h4>Order Price : @Model["order"].OrderPrice</h4>
<h5>Order Date : @Model["order"].OrderDate</h5>

<a href='/vendor/@Model["vendor"].Id/order/new'>Add new order</a>